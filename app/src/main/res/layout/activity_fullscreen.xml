<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.tim.domi.remotecontrol.activity.RoverControlActivity">

    <com.tim.domi.remotecontrol.widget.VerticalSeekBar
        android:id="@+id/speed_control_view"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_margin="50dp"
        android:alpha="0.4"
        android:background="@drawable/shape"
        android:max="100"
        android:paddingBottom="0dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="0dp"
        android:progress="50"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/adjust"
        android:visibility="invisible" />

    <SeekBar
        android:id="@+id/steering_control_view"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="50dp"
        android:alpha="0.4"
        android:background="@drawable/shape"
        android:max="100"
        android:paddingBottom="0dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="0dp"
        android:progress="50"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/circle"
        android:visibility="invisible" />

    <Button
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/connect_button"
        android:textSize="25sp" />

    <com.tim.domi.remotecontrol.widget.ConnStateView
        android:id="@+id/conn_state_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ping_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:enabled="false"
        android:textColor="@color/text_nomal_color"
        android:visibility="invisible"
        tools:text="999" />

</RelativeLayout>
